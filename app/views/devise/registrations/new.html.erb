<div class="top_page">
  <p class="mx-3">You are in control</p>
  <div class="d-flex justify-content-center">
    <div>
      <%= image_tag "lock.svg", class: "mb-3", alt: "data protection", style: 'height:auto;width:100px;' %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row text-center">
    <div class="col col-xs-10 col-sm-8"><!-- col-sm-offset-3 -->
      <div class="catch-paragraph">Data is shared with your friend(s) and each match approved individually by you.
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true, placeholder: 'First Name',  label: false %>
          <%= f.input :last_name,
                      required: true, placeholder: 'Last Name',  label: false %>
          <%= f.input :email,
                      required: true,
                      autofocus: false,
                      input_html: { autocomplete: "email" }, placeholder: 'email',  label: false %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'password',  label: false ,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" }, placeholder: 'confirm password',  label: false %>
            <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 18,
                                      end_year: Date.today.year - 100,
                                      order: %i(day month year)  %>
          <%= render 'gender' %>
          <%= f.input :available, label: 'Status', as: :radio_buttons, collection: [['Single & looking to be matched', true], ['Not available to be matched', false]], label_method: :first, value_method: :second %>
          <label class="btn btn-primary" id="bob">Add a picture
            <span style="display:none;">
              <%= f.input :picture, multiple: false, name: 'upload a profile picture' %>
            </span>
          </label>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up", class: "main_action_button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



