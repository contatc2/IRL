<div class="top_page">
  <p class="mx-3">You are in control</p>
  <div class="d-flex justify-content-between">
    <div></div>
    <div>
      <%= image_tag "lock.svg", class: "mb-3", alt: "data protection", style: 'height:auto;width:100px;' %>
    </div>
    <div></div>
  </div>
</div>
<div class="catch-paragraph">
  Data is shared with your friend(s) and each match approved individually by you.
</div>

<div class="form">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true, hint_html: { class: "from-text"} %>
      <%= f.input :last_name,
                  required: true, hint_html: { class: "from-text"} %>
      <%= f.input :email,
                  required: true,
                  autofocus: false,
                  input_html: { autocomplete: "email" }, hint_html: { class: "from-text"} %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }, hint_html: { class: "from-text"} %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" }, hint_html: { class: "from-text"} %>
      <%= f.input :available, input_html: {checked: true}, hint_html: { class: "from-text"} %>
      <%= f.input :picture, hint_html: { class: "from-text"} %>
      <%= f.input :picture_cache, as: :hidden, hint_html: { class: "from-text"} %>

    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Sign up", class: "second_action_button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


