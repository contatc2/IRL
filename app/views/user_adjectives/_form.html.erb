<div class="container">
  <div class="jumbotron">
    <div class="form-inputs">
      <%= simple_form_for [@user, @useradj] do |f| %>
        <%= f.input :adjective, hint: "First adjective that matters to you" %>
        <%= f.input :adjective_2, hint: "Second adjective that matters to you" %>
        <%= f.input :adjective_3, hint: "Third adjective that matters to you" %>
        <%= f.button :submit, "Update preferences", class: "full_width_button" %>
      <% end %>
    </div>
  </div>
</div>
