<%= simple_form_for @user do |f| %>
  <%= f.label 'You are a:', class: "catch-paragraph mb-0" %>
  <%= render 'devise/registrations/gender' %>
  <%= f.label 'You would like to be matched with a:', class: "catch-paragraph my-0"  %>
  <%= render 'search_gender'%>
  <%= f.input :adjective_1, hint_html: { class: "from-text"},  placeholder: 'who is...', label: false, hint: "First adjective that matters to you"  %>
  <%= f.input :adjective_2, hint_html: { class: "form-text"}, placeholder: '.. and', label: false, hint: "Second adjective that matters to you"  %>
  <%= f.input :adjective_3, hint_html: { class: "form-text"}, placeholder: '.. and', label: false, hint: "Third adjective that matters to you"  %>
  <div class="text-center mb-3">
    <%= f.button :submit, "UPDATE SEARCH", class: "second_action_button right" %>
  </div>
<% end %>
</div>
</div>